module eval/Statements
imports 
  libdryad
  eval/Expressions
  eval/Primitive
  eval/Rules

strategies

  /**
   * Stub
   */
  eval-stat =
       Block( {| EvalVar : map(eval-stat) |} )
    <+ ExprStm(eval-exp)
    <+ LocalVarDecStm(eval-local-var-dec)

  eval-local-var-dec =
    ?LocalVarDec(_, _, <id>)
    ; map(eval-var-dec)

  eval-var-dec =
    ?VarDec(Id(var))
    ; rules ( EvalVar+var :- ExprName(Id(var)) )

  eval-var-dec =
    ?VarDec(Id(var), value)
    ; <eval-exp>value => v
    ; rules ( EvalVar+var :- ExprName(Id(var)) )
    ; rules ( EvalVar.var :  ExprName(Id(var)) -> v )
