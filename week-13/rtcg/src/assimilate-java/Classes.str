module assimilate-java/Classes
imports
  Java-EBlock

rules

  Assimilate(s) =
    ?ClassDec(head, body)
    ; <mapconcat(s)>[head, body]

  Assimilate(s) :
    ClassDecHead(mods, name, type-params, super, interfaces)
    ->
    bstm* |[
      ClassType thisClass;
      thisClass = new ClassType(~name);
      thisClass.setSuper("java.lang.Object");
      thisClass.setModifiers(Access.PUBLIC);
    ]|

  Assimilate(s) :
    ClassBody(decs) -> []
